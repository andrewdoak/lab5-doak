<!--QUOTES Form-->
<%= form_for(quote) do |f| %>
  <% if quote.errors.any? %>
    <div id="error_explanation" class="w3-animate-opacity f3 w3-text-red mx-multiply playfair-display">
       <h2><%= pluralize(quote.errors.count, "error") %> prohibited this quote from being saved:</h2>

      <ul>
      <% quote.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="w3-panel">
    <%= f.label :name , class:"playfair-display fw6 f1 lh-copy" %>
    <%= f.text_field :name , class:"space-mono red w3-input w3-border" %>
  </div>

  <div class="w3-panel">
    <%= f.label :content , class:"playfair-display fw6 f1 lh-copy" %>
    <%= f.text_field :content , class:"space-mono red w3-input w3-border" %>
  </div>

  <div class="actions pb5 pl3">
    <%= f.submit :Submit,
    class:"shadow-1 ttu f6 space-mono w3-mobile w3-button br-pill grow
    w3-white w3-border w3-border-red w3-text-red w3-hover-red" %>
  </div>
<% end %>

